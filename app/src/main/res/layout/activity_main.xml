<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/planet_mercury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Mercury" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/jupiter_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Jupiter" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/Mercury"
            app:layout_constraintTop_toBottomOf="@+id/Mercury"/>
    <Button
            android:text="@string/mars_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Mars"
            app:layout_constraintTop_toTopOf="@+id/Venus"
            app:layout_constraintStart_toEndOf="@+id/Venus" android:layout_marginStart="36dp"/>
    <Button
            android:text="@string/venus_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Venus"
            app:layout_constraintTop_toTopOf="@+id/Mercury" app:layout_constraintStart_toEndOf="@+id/Mercury"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="@string/saturn_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Saturn" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Venus" app:layout_constraintStart_toEndOf="@+id/Jupiter"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="@string/uranus_planet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Uranus" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Mars" app:layout_constraintStart_toEndOf="@+id/Saturn"
            android:layout_marginStart="36dp"
    />
    <TextView
            android:text="On Earth, I have been alive for...."
            android:layout_width="308dp"
            android:layout_height="43dp"
            android:id="@+id/textView" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="35dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/years" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:text="0"/>
    <EditText
            android:layout_width="35dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/days" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="15dp" android:text="0"/>
    <EditText
            android:layout_width="35dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/months" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="15dp" android:text="0"/>
    <TextView
            android:text="years"
            android:layout_width="49dp"
            android:layout_height="25dp"
            android:id="@+id/textView2" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/years"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="months"
            android:layout_width="66dp"
            android:layout_height="26dp"
            android:id="@+id/textView3" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/months"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="days"
            android:layout_width="49dp"
            android:layout_height="25dp"
            android:id="@+id/textView4" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/days"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="However, on....."
            android:layout_width="313dp"
            android:layout_height="27dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="18sp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="(click on planet name to select)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="I am about"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="432dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result" app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" android:textSize="18sp"
            android:layout_marginStart="6dp"/>
    <TextView
            android:text="years old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toEndOf="@+id/result"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/textView7" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error_message"
            android:textColor="@android:color/holo_red_dark" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>